/*
 * Import nib
 */
@import 'nib'

/*
 * Import bootstrap
 */
@import 'bootstrap.min.css'
@import 'constants'
@import 'nav'
@import 'jumbotron'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

body
    font-family 'Georgia'
    background-color background-color
    color #444
    
header
    font-family 'Quicksand'
    padding 25px 15px 0px 15px
    color #fff
    font-size 25px
    text-align center
    background-color main-color
    border-bottom 1px solid darken(main-color, 30%)
    text-shadow 0px -1px 0px darken(main-color, 30%)

    h1
        margin-top 0px

    .seperator
        background linear-gradient(left, main-color, darken(main-color, 30%))
        height 2px

ul
    padding-left 0px

li
    display inline
    list-style-type none
    margin-left 10px

footer
    text-align center