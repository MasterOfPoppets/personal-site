doctype
html(lang='en' ng-app='GHApp' ng-controller='GHCtrl')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='')
    meta(name='author' content='')
    
    base(href='/')
    
    title(ng-bind='PageFactory.title()')
    
    // Bower CSS
    link(href='/stylesheets/_bower.css' rel='stylesheet')
    
    // Bower Javascripts
    //script(src='/javascripts/_bower.js')
    
    // Custom CSS#
    link(href='/stylesheets/agency.css' rel='stylesheet')
    link(href='/stylesheets/style.css' rel='stylesheet')
    
    // Custom Fonts
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css' rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet')
    
    // Bower Javascripts
    script(src='/javascripts/_bower.js')
    
    // Angular App
    script(src='/javascripts/gh.min.js')
    
  body#page-top.index
    // Navigation
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(gh-scrolling-anchor href='#page-top') Gareth Hughes
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.hidden
              a(name='#page-top')
            li
              a(gh-scrolling-anchor href='#services') Services
            li
              a(gh-scrolling-anchor href='#portfolio') Portfolio
            li
              a(gh-scrolling-anchor href='#blog') Blog
            li
              a(gh-scrolling-anchor href='#contact') Contact
    
    // Header
    header
      .container
        .intro-text
          .intro-lead-in gareth hughes
          .intro-heading MEAN Web Developer
          a.btn.btn-xl(gh-scrolling-anchor href='#services') Tell Me More

    div(ui-view)
  
    footer
      .container
        .row
          .col-md-4
            span.copyright Copyright &copy; Gareth Hughes 2015
          .col-md-4
            ul.list-inline.social-buttons
              gh-social-link(ng-repeat='socialLink in ::socialLinks')
          //.col-md-4
            ul.list-inline.quicklinks
              li
                a(href='#') Privacy Policy
              li
                a(href='#') Terms of Use
    
    // Custom Javascripts
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js')
    script(src='/javascripts/classie.js')
    script(src='/javascripts/cbpAnimatedHeader.js')
    script(src='/javascripts/agency.js')