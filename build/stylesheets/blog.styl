#blog-posts
  margin-top 60px

  .blog-entry-title
    a
      text-decoration none

  .blog-entry
    border-bottom 1px solid lighten(main-color, 30%)
    margin-top 40px
    &:first-child
      margin-top 0px
    &:last-child
      border-bottom none

  .blog-entry-date
    margin 10px 0px

#blog-entry
  margin-top 60px

  .blog-entry-title
    border-bottom 2px solid black

  .blog-entry-date
    margin 20px 0px

.blog-entry-title
  line-height 1.2em
  margin-top 0px

.blog-entry-date
  display block
  
  i:before
    margin-right 5px

#blog-posts
#blog-entry
  markdown
    h3
      line-height 1.6em

    p
      line-height 1.6em
      code
        background-color #f5f5f5
        border 1px solid #ccc
        border-radius 0px