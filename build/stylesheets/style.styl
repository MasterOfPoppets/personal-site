/*
 * Import nib
 */
@import 'nib'

/*
 * Import other styles
 */
@import 'constants'
@import 'header'
@import 'jumbotron'
@import 'portfolio'
@import 'blog'
@import 'famous'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

img
  max-width 100%

html
body
  height 100%

body
  font-family my-serif
  background-color background-color
  color #444

  p
    font-size 16px
    line-height 1.6em

#content 
  .main-content
    margin-top 60px

#content-jumbo
  .main-content
    section
      &:first-child
        padding-top 48px

.wrapper
  min-height 100%
  margin 0 auto -50px

.main-content
  section
    border-bottom 1px solid lighten(main-color, 30%)
    margin-bottom 30px
    padding-bottom 48px
    &:last-child
      margin-bottom 0px

#technologies
  img
    width 180px

.image-loader-320
  height 213px
  width 320px

.image-loader-720
  height 480px
  width 720px

.italic
  font-style italic

.vkemail
  display none

ul
  padding-left 0px

li
  display inline
  list-style-type none
  margin-left 25px

footer 
.push
  height 50px

footer
  text-align center