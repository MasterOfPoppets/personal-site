/*
 * Import nib
 */
@import 'nib'

/*
 * Import bootstrap
 */
@import 'bootstrap.min.css'
@import 'constants'
@import 'header'
@import 'jumbotron'
@import 'blog'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

img
  max-width 100%

body
  font-family my-serif
  background-color background-color
  color #444
    
.main-content
  section
    border-bottom 1px solid lighten(main-color, 30%)
    margin-bottom 30px
    padding-bottom 48px
    &:first-child
      border-top 1px solid lighten(main-color, 30%)
      padding-top 48px

#technologies
  img
    width 180px

#portfolio-items
  img
    width 100%

.image-loader-320
  height 213px
  width 320px

.image-loader-720
  height 480px
  width 720px

ul
  padding-left 0px

li
  display inline
  list-style-type none
  margin-left 25px

footer
  text-align center